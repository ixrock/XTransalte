    "@types/html-webpack-plugin": "^3.2.9",
    "@types/jest": "^29.5.14",
    "@types/js-md5": "^0.7.2",
    "@types/lodash": "^4.17.13",
    "@types/mini-css-extract-plugin": "^2.5.1",
    "@types/node": "^22.10.1",
    "@types/pdfjs-dist": "^2.10.378",
    "@types/react": "^19.0.1",
    "@types/react-color": "^3.0.12",
    "@types/react-dom": "^19.0.1",
    "@types/webpack": "^5.28.5",
    "auto-bind": "^5.0.1",
