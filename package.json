    "flag-icons": "^7.2.3",
    "flex.box": "^3.4.4",
    "hoist-non-react-statics": "^3.3.2",
    "html-webpack-plugin": "^5.6.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "js-md5": "^0.8.3",
